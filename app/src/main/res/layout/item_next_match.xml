<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    tools:ignore="PrivateResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_reminder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notifications_active_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_date_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"

            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            tools:text="date" />

        <TextView
            android:id="@+id/tv_time_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date_next"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            tools:text="time" />

        <TextView
            android:id="@+id/tv_home_club_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_next"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_score_home_club_next"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="Barcelona" />

        <TextView
            android:id="@+id/tv_score_home_club_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_next"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/tv_vs_next"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_vs_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_next"
            android:layout_centerHorizontal="true"
            android:text="@string/vs"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_score_away_club_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_next"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/tv_vs_next"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_away_club_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_next"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/tv_score_away_club_next"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="Real Madrid" />
    </RelativeLayout>
</android.support.v7.widget.CardView>